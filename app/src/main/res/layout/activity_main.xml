<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252621"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">


    <Spinner
        android:id="@+id/set_language_from"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/language_spinner_item"
        android:foregroundGravity="center_vertical" />

    <Spinner
        android:id="@+id/set_language_to"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/set_language_from"
        android:layout_marginTop="10dp"
        android:background="@drawable/language_spinner_item" />

    <ImageView
        android:id="@+id/start_service_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/set_language_to"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        android:src="@drawable/play" />

</RelativeLayout>
